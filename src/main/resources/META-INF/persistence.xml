<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="xworkz">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Add all your entity classes here -->
        <class>com.xworkz.parkingrental.entity.ParkingEntity</class>
        <class>com.xworkz.parkingrental.entity.ParkingInfoEntity</class>
        <class>com.xworkz.parkingrental.entity.UserEntity</class>
        <class>com.xworkz.parkingrental.entity.UserParkingEntity</class>



        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jdbc_schema"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="8105932128"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>

</persistence>
